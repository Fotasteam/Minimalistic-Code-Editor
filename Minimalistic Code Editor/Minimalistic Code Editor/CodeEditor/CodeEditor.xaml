<UserControl
    x:Class="Minimalistic_Code_Editor.CodeEditor.CodeEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Minimalistic_Code_Editor.CodeEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        
        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="Transparent" Width="50" Height="Auto" Margin="0,40,0,0">
            <Border HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="1" Height="Auto" Background="#121212"/>
            <TextBlock x:Name="linesTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20"/>
        </Grid>

        <Grid x:Name="temp" Width="Auto" Height="Auto" Margin="50,40,0,0" Background="Transparent" KeyDown="Grid_KeyDown">
            <TextBlock Text="{x:Bind codeEditorContent}" TextWrapping="Wrap"/>
        </Grid>

    </Grid>
</UserControl>
